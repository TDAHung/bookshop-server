doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script(src="https://cdn.tailwindcss.com")
    script(src="https://kit.fontawesome.com/39a762dd6d.js", crossorigin="anonymous")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/stylesheets/index.css")
    link(rel="stylesheet", href="/stylesheets/admin.css")
    if (path)
      link(rel="stylesheet", href=`/stylesheets/${path}/${method}.css`)
    title Admin - Bookshop
  body
    include ../partials/_header
    nav.navbar.fixed(class="w-1/5")
      div.project__name.text-center.font-extrabold.text-5xl.py-16
        | Bookshop
      ul.navbar__list.text-3xl
        li.navbar__link.px-8.h-20(class= path === 'homes' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'homes' ? 'active' : '')
            a(href="/")
              i.fa-solid.fa-chart-line
              |  Dashboard
        li.navbar__link.px-8.h-20(class= path === 'books' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'books' ? 'active' : '')
            a(href="/books")
              i.fa-solid.fa-book
              |  Books
        li.navbar__link.px-8.h-20.h-20(class= path === 'categories' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'categories' ? 'active' : '')
            a(href="/categories")
              i.fa-solid.fa-list
              |  Category
        li.navbar__link.px-8.h-20(class= path === 'reviews' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'reviews' ? 'active' : '')
            a(href="/reviews")
              i.fa-regular.fa-star
              |  Reviews
        li.navbar__link.px-8.h-20(class= path === 'orders' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'orders' ? 'active' : '')
            a(href="/orders")
              i.fa-solid.fa-cart-shopping
              |  Order
        li.navbar__link.px-8.h-20(class= path === 'authors' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'authors' ? 'active' : '')
            a(href="/authors")
              i.fa-solid.fa-pencil
              |  Authors
        li.navbar__link.px-8.h-20(class= path === 'about' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'about' ? 'active' : '')
            a(href="/about")
              i.fa-regular.fa-address-card
              |  About
        li.navbar__link.px-8.h-20.mt-64(class= path === 'about' ? 'active' : '')
          div.navbar__link__wrapper.flex.flex-col.justify-center.h-full.px-4(class= path === 'about' ? 'active' : '')
            a(href="/logout")
              i.fa-solid.fa-arrow-right-from-bracket
              |  Logout

    div.content.absolute.end-0(class="h-4/5")
      div.container.p-8.rounded-s-md.h-full
        block content

    script(src="/javascript/main.js")
    if (path == 'books')
      if (method == "show")
        script(src="/javascript/reviews.js")
      else if (method == "create")
        script(src="/javascript/files.js")
      else
        script(src="/javascript/books.js")
        script(src="/javascript/paging.js")
        script(src="/javascript/modal.js")
    else if (path == 'reviews')
      script(src="/javascript/reviews.js")
      script(src="/javascript/paging.js")
    else if (path == 'orders')
      script(src="/javascript/order.js")
      script(src="/javascript/paging.js")
    else if(path == "homes")
      script(src="https://cdn.jsdelivr.net/npm/chart.js")
      script(src="/javascript/homes.js")
    else if(path == "authors")
      if (method == "edit")
        script(src="/javascript/edit_file.js")
      else
        script(src="/javascript/authors.js")
        script(src="/javascript/files.js")
    else if(path == "categories")
      script(src="/javascript/modal.js")
