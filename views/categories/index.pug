extends ../layouts/admin

block content
    div.table.w-full.bg-white.relative
        a.create-category.absolute.text-2xl(href="categories/create") Add Category
        ul.t-head-wrapper.ml-8.my-8.flex.justify-between.text-2xl.mt-16
            li.t-head.category__id ID
            li.t-head.category__name Name
            li.t-head Description
            li.t-head Last updated at
        div.line
        each category in categories
            a.t-row-wrapper.ml-8.flex.justify-between.text-lg(href=`/category/edit/${category.id}` class="hover:bg-slate-100 transition-colors")
                div.t-row.category__id= category.id
                div.t-row.category__name= category.name
                div.t-row= category.description
                div.t-row.updated_at= category.updatedAt
    include ../partials/_paging

